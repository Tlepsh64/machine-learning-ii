% Other more complex foil types: middlefoil and emptyfoil


% Big hack to get text in the center must be solved differently

\newcommand{\middlefoil}[1]
{
  \foilhead{}
  \thispagestyle{empty}
  \vskip 4.9cm
  \noindent
  \smash{\parbox[c]{\textwidth}{
    \begin{center}
      \begin{LARGE}
        #1\\
      \end{LARGE}
    \end{center}
  }}
  \addtocounter{page}{-1}
}

\newcommand{\emptyfoil}[1]
{
  \foilhead{}
  \thispagestyle{empty}
}
